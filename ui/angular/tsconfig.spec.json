{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "paths": {
    "@core": [
      "src/app/core"
    ],
    "@core/*": [
      "src/app/core/*"
    ],
    "@shared": [
      "src/app/shared"
    ],
    "@shared/*": [
      "src/app/shared/*"
    ],
    "@service-proxies": [
      "src/app/service-proxies"
    ],
    "@service-proxies/*": [
      "src/app/service-proxies/*"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
