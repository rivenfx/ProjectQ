{
  "ConnectionStrings": {
    "Default": "server=(localdb)\\MSSQLLocalDB;database=RivenTest;uid=sa;pwd=123;",
    "TenantA": "server=(localdb)\\MSSQLLocalDB;database=RivenTestA;uid=sa;pwd=123;"
  },
  "App": {
    "Name": "Company.Project.Host",
    "Version": "v1",
    "UseIdentityServer4": false,
    "CorsOrigins": "*"
  },
  "IdentityServer4": { // IdentityServer4配置
    "Server": "http://localhost:12306", // IdentityServer4服务端地址
    "ClientId": "HostClient", // 客户端id
    "ClientSecret": "secret", // 客户端密钥
    "Scope": "Host" // 访问范围
  },
  "Authentication": { // 认证配置,使用 IdentityServer4 的配置校验Token
    "JwtBearer": {
      "Audience": "Host",
      "Authority": "http://localhost:12306"
    }
  },
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
